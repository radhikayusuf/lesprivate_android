<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_16sp"
                android:layout_marginBottom="@dimen/dimens_4dp"
                tools:text="Les Bahasa Inggris SMK" />

            <TextView
                android:id="@+id/locationContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12sp"
                tools:text="Block 71 - Dago" />

            <TextView
                android:id="@+id/timeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12sp"
                tools:text="Minggu, 14 Jun 20 - 14:00" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonRemove"
            android:layout_width="@dimen/dimens_24dp"
            android:layout_height="@dimen/dimens_24dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimens_16dp"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_close_black_schedule_24dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"
        android:layout_gravity="bottom"
        android:background="@color/colorGray"/>
</FrameLayout>